<!doctype html>
<html>
  <head>
    <title>Socket.IO Bate Bola</title>

    <!-- Import Google Icon Font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- jQuery because yes, before my stuffs -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- my stuffs -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/assets/javascripts/arena.js"></script>
  </head>

  <body>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="col s12 center">
            <h4>Arena #: <%= arenaId %></h4>
            <input type="hidden" id="arenaId" value="<%= arenaId %>" disabled="disabled" />
          </div>
        </div>

        <div class="row">
          <div class="col s4">
            <h5 id="myName" style="text-align: right">My Team</h5>
          </div>

          <div class="col s4 center">
            <h4>
              <span id="myScore">0</span> X <span id="otherScore">0</span>
            </h4>
          </div>

          <div class="col s4">
            <h5 id="otherName">Waiting for opponent...</h5>
          </div>
        </div>

        <div class="row">
          <div class="col s4">
            <ul id="myDeck" class="collection"></ul>
          </div>

          <div class="col s4">
            <ul id="messages">
            </ul>
          </div>

          <div class="col s4">
            <ul id="otherDeck" class="collection"> </ul>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <p> <i class="material-icons left">grade</i> Player owning the ball </p>
          </div>
        </div>

        <div class="row">
          <div class="col s12 center">
            <button class="btn light-green" id="play" disabled="disabled">Play</button>
            <button class="btn light-green" id="kick" disabled="disabled">Kick</button>
          </div>
        </div>
    </div>

    <!--Materialize JavaScript at end of body for optimized loading -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
