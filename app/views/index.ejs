<!doctype html>
<html>
  <head>
    <title>Socket.IO Bate Bola</title>

    <!-- Import Google Icon Font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />

    <!-- jQuery because yes, before my stuffs -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- my stuffs -->
    <script src="/assets/javascripts/index.js"></script>
    <link rel="stylesheet" href="/assets/stylesheets/index.css" />
  </head>

  <body>
    <div id="index-content">
      <div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#join">Join Arena</a></li>
            <li class="tab col s6"><a href="#create">Create new Arena</a></li>
          </ul>
        </div>

        <div id="join" class="col s12">
          <div class="card">
            <form id="formJoinArena" name="formJoinArena" action="/arena/join" method="POST">
              <div class="card-content">
                <div class="row">
                  <div class="input-field col s12">
                    <input type="text" id="joinUsername" name="username" class="validate" required placeholder="Your name / nickname" />
                    <label for="name">Name / Nickname</label>
                    <span id="joinUsernameMessage" class="helper-text" data-error="Invalid" data-success=""></span>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input type="text" id="joinArenaId" name="arenaId" class="validate" required pattern="\d+" placeholder="Arena #ID number" />
                    <label for="name">Arena #ID</label>
                    <span id="arenaMessage" class="helper-text" data-error="Invalid" data-success=""></span>
                  </div>
                </div>

                <div class="card-action">
                  <button id="arenaLinkJoin" class="btn waves-effect">Join Arena</button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <div id="create" class="col s12">
          <div class="card">
            <form id="formCreateArena" name="formCreateArena" action="/arena" method="POST">
              <div class="card-content">
                <div class="row">
                  <div class="input-field col s12">
                    <input type="text" id="createUsername" name="username" class="validate" required placeholder="Your name / nickname" />
                    <label for="name">Name / Nickname</label>
                    <span id="createUsernameMessage" class="helper-text" data-error="Invalid" data-success=""></span>
                  </div>
                </div>

                <div class="card-action">
                  <button id="arenaLinkCreate" class="btn wafes-effect">Create Arena</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!--Materialize JavaScript at end of body for optimized loading -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
